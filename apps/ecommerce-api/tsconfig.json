{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@app/*": ["./src/*"],
      "@functions/*": ["./src/functions/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@services/*": ["./src/services/*"],
      "@models/*": ["./src/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@validations/*": ["./src/validations/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@constants/*": ["./src/constants/*"],
      "@utils/*": ["./src/utils/*"],
      "@packages/*": ["../../packages/*/dist", "../../packages/*/src"],
      "@services": ["./src/services"],
      "@controllers": ["./src/controllers"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
