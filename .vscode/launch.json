{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Serverless Offline",
      "program": "${workspaceFolder}/node_modules/.bin/serverless",
      "args": ["offline", "start"],
      "cwd": "${workspaceFolder}/apps/ecommerce-api",
      "env": {
        "NODE_ENV": "development",
        "MONGODB_URI": "mongodb://localhost:27017/ecommerce-dev",
        "JWT_SECRET": "your-super-secret-jwt-key-here-32-chars-minimum",
        "JWT_REFRESH_SECRET": "your-super-secret-refresh-key-here"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "--nolazy",
        "--inspect=9229"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Serverless Offline",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
